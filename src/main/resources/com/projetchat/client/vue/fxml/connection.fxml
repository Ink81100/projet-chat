<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projetchat.client.controlleur.ConnectionContr">
   <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Connexion" />
   <Label text="Nom :" />
   <TextField fx:id="nomField" />
   <Label text="IP :" />
   <TextField fx:id="ipField" />
   <Label text="Port :" />
   <TextField fx:id="portField" />
   <Button onAction="#onConnect" text="Se connecter" />
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200" prefWidth="300" spacing="10.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20" left="20" right="20" top="20" />
   </padding>
   <children>
      <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Connexion au serveur" />
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <TextField fx:id="adresseField" promptText="Adresse IP ou nom de domaine" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <Label contentDisplay="RIGHT" text="Adresse" BorderPane.alignment="TOP_LEFT" />
         </top>
      </BorderPane>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <TextField fx:id="portField" promptText="Port" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <Label text="Port" BorderPane.alignment="TOP_LEFT" />
         </top>
      </BorderPane>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <TextField fx:id="usernameField" promptText="Nom d'utilisateur" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <Label text="Nom d'utilisateur" BorderPane.alignment="TOP_LEFT" />
         </top>
      </BorderPane>
      <Button onAction="#onConnectClick" prefWidth="150" text="Se connecter" />
      <Label fx:id="statusLabel" textFill="red" />
   </children>
</VBox>
